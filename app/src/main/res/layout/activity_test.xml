<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test del Inversor"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué experiencia tenés como inversionista?"
        android:textSize="16sp"/>
    <RadioGroup
        android:id="@+id/answer1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/answer1Option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A- Baja."
            android:tag="1"
            android:padding="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"/>
        <RadioButton
            android:id="@+id/answer1Option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B- Media."
            android:tag="2"
            android:padding="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"/>
        <RadioButton
            android:id="@+id/answer1Option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C- Alta."
            android:tag="3"
            android:padding="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué porcentaje de tus ahorros estás dispuesto a destinar a las inversiones en el Mercado de Capitales?"
        android:textSize="16sp"/>
    <RadioGroup
        android:id="@+id/answer2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/answer2Option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A- Menos del 25%."
            android:tag="1"
            android:padding="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"/>
        <RadioButton
            android:id="@+id/answer2Option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B- Entre el 25% y el 50%."
            android:tag="2"
            android:padding="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"/>
        <RadioButton
            android:id="@+id/answer2Option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C- Más del 50%."
            android:tag="3"
            android:padding="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Cuánto tiempo conservarías esta inversión?"
        android:textSize="16sp"/>
    <RadioGroup
        android:id="@+id/answer3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/answer3Option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A- Menos de 180 días."
            android:tag="1"
            android:padding="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"/>
        <RadioButton
            android:id="@+id/answer3Option2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B- Entre 180 días y 2 años."
            android:tag="2"
            android:padding="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"/>
        <RadioButton
            android:id="@+id/answer3Option3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C- Más de 2 años."
            android:tag="3"
            android:padding="8dp"
            android:minWidth="48dp"
            android:minHeight="48dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"/>

</LinearLayout>
